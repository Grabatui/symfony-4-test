{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <a href="{{ path('blog_index') }}">Back</a>

    <div style="margin-top: 10px; border: 1px solid black; padding: 0 10px;">
        <p>ID {{ id }} (<small>{{ post.date|date('H:i:s') }}</small>)</p>

        <h3>{{ post.title }}</h3>

        <p>{{ post.text }}</p>

        <p>{{ 150|price }}</p>
    </div>
{% endblock %}
